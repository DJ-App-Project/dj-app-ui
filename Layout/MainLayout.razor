@inherits LayoutComponentBase
@using Dj.Models
@using Dj.Services
@inject AppState AppState
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<CascadingValue Value="AppState">
    <NavMenu />
</CascadingValue>

<div class="page">
    <main>
        @Body
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var token = await LocalStorage.GetItemAsync<string>("token");
            Console.WriteLine($"[MainLayout] Retrieved token: {token}");
            if (!string.IsNullOrEmpty(token))
            {
                var user = await LocalStorage.GetItemAsync<LoginUser>("user");
                Console.WriteLine($"[MainLayout] Retrieved user: {user?.Username}");
                AppState.SetLoggedIn(true, user);
            }
            else
            {
                Console.WriteLine("[MainLayout] No token found.");
                AppState.SetLoggedIn(false, null);
            }
            StateHasChanged();
        }
    }
}
