@page "/prijava"
@rendermode InteractiveServer

<PageTitle>Prijava</PageTitle>

<HeadContent>
    <link href="css/Login.css" rel="stylesheet" />
</HeadContent>

<section class="text-center hero">
    <div class="container">
        <h1 class="display-2"><b>Prijava in Registracija</b></h1>
        <p class="lead" style="font-size:1.5rem">Prijavite se ali ustvarite nov račun za dostop do aplikacije.</p>
    </div>
</section>

<section class="default-page-dark feature-section" style="padding-top:100px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-sign-in-alt feature-icon"></i> <b style="font-size:1.5rem">Prijava</b>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="email">E-pošta</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <input id="email" type="email" class="form-control" placeholder="E-pošta" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Geslo</label>
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <input id="password" type="password" class="form-control" placeholder="Geslo" required>
                            </div>
                            <button type="submit" class="btn btn-primary button-fancy-blue w-100">Prijava</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-user-plus feature-icon"></i> <b style="font-size:1.5rem">Registracija</b>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="username">Uporabniško ime</label>
                                <div class="input-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <input id="username" type="text" class="form-control" placeholder="Uporabniško ime" required>
                            </div>
                            <div class="form-group">
                                <label for="email-register">E-pošta</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <input id="email-register" type="email" class="form-control" placeholder="E-pošta" required>
                            </div>
                            <div class="form-group">
                                <label for="password-register">Geslo</label>
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <input id="password-register" type="password" class="form-control" placeholder="Geslo" required>
                            </div>
                            <button type="submit" class="btn btn-secondary button-fancy w-100">Registracija</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
