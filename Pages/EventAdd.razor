@page "/dogodek_dodaj"
@using Dj.Models


<PageTitle>Dodajanje dogodka</PageTitle>

<section id="login-hero" class="hero-section text-center">
    <div class="container">
        <h1 class="display-2"><b>Dodajanje dogodka</b></h1>
    </div>
</section>


<section class="feature-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card" style="border:2px solid white">
                    <div class="card-header">
                        <i class="fas fa-sign-in-alt feature-icon"></i> <b style="font-size:1.5rem">Prijava</b>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="inputIme">Ime dogodka</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <input id="inputIme" @bind="@NovEvent.Name" @oninput="(e)=> { NovEvent.Name = e.Value ==null? string.Empty:(string)e.Value; }" />
                            </div>
                            <div class="form-group">
                                <label for="inputOpis">Opis</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <input id="inputOpis" @bind="@NovEvent.Description" @oninput="(e)=> { NovEvent.Description = e.Value ==null? string.Empty:(string)e.Value; }" />
                            </div>
                            <div class="form-group">
                                <label for="inputDatum">Datum dogodka</label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <input id="inputDatum" type="datetime-local" class="form-control" @bind="NovEvent.Date" />
                            </div>
                            <div class="form-group">
                                <label for="inputLokacija">Lokacija</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <input id="inputLokacija" @bind="@NovEvent.Location" @oninput="(e)=> { NovEvent.Location = e.Value ==null? string.Empty:(string)e.Value; }" />
                            </div>
                            <button class="btn btn-primary" @onclick="()=>DodajDogodek(NovEvent)">Dodaj dogodek</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@code {

    private DJEvent NovEvent;

    protected override async Task OnInitializedAsync() //Metoda, ki se kliče ob prvem izrisu strani!
    {
        OsveziPolja();
    }

    private async void DodajDogodek(DJEvent NovEvent)
    {
        //var reply = await "APIcall";
        OsveziPolja();
        InvokeAsync(() => { StateHasChanged(); }); //Proži ponoven izriz sicer se ne zgodi nič!
    }

    private void OsveziPolja()
    {
        NovEvent = new DJEvent("", "", "", "", DateTime.Today, "", "");
    }
}
